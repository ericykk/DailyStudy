<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
			http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd"
       default-autowire="byName" default-lazy-init="false">

    <!-- 自动扫描 -->
    <context:component-scan base-package="com.eric.study.*"/>

    <bean id="userServiceImpl" class="com.eric.study.spring.UserServiceImpl"></bean>

    <bean id="userInterceptor" class="com.eric.study.spring.UserInterceptor"></bean>


    <bean id="initAndDestroyBean" class="com.eric.study.spring.InitAndDestroyBean" init-method="init" destroy-method="destroyMethod"/>

    <bean id="userService" class="org.springframework.aop.framework.ProxyFactoryBean">
        <!--代理接口-->
        <property name="proxyInterfaces">
            <value>com.eric.study.spring.IUserService</value>
        </property>

        <property name="target">
            <ref bean="userServiceImpl"/>
        </property>

        <property name="interceptorNames">
            <list>
                <value>userInterceptor</value>
            </list>
        </property>

    </bean>

    <bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource">
        <property name="driverClassName" value="com.microsoft.sqlserver.jdbc.SQLServerDriver"/>
        <property name="url" value="jdbc:sqlserver://10.8.1.112:1433;DatabaseName=MobileManagement;sendStringParametersAsUnicode=false"/>
        <property name="username" value="dev_yunying"/>
        <property name="password" value="1277415756"/>
    </bean>

    <bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
        <property name="dataSource" ref="dataSource"/>
        <property name="configLocation" value="mybatis-config.xml"/>
    </bean>

    <bean id="phoneNumberMapper" class="org.mybatis.spring.mapper.MapperFactoryBean">
        <property name="sqlSessionFactory" ref="sqlSessionFactory"/>
        <property name="mapperInterface" value="com.eric.study.mybatis.dao.PhoneNumberDao"/>
    </bean>

</beans>